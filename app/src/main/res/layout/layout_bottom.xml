            android:textAllCaps="true" />

        <TextView
            android:id="@+id/create"
            style="@style/bottom_tv"
            android:text="create"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/history"
            style="@style/bottom_tv"
            android:text="history"
            android:textAllCaps="true" />

    </LinearLayout>
</LinearLayout>